<div class="like-box p-2">
<% if !user_signed_in? %>
  <div class="unlike"><i class="far fa-smile"></i></div>
<% elsif current_user.likes.find_by(post_id: post.id) %>
  <%= link_to unlike_path(post.id), method: :delete do %>
    <div class="like"><i class="far fa-laugh-beam"></i></div>
  <% end %>
<% else %>
  <%= link_to like_path(post.id), method: :post do %>
    <div class="unlike"><i class="far fa-smile"></i></div>
  <% end %>
<% end %>
<%= post.likes.count %>
</div>
