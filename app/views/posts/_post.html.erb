<div class="card mb-5">
  <%= link_to post do %>
    <!-- image_magickのメソッドを使用して画像サイズを変更して表示 -->
    <% if post.image.attached? %>
      <%= image_tag post.image.variant(resize_to_fill: [800, 800]).processed, class: "card-img" %>
    <% else %>
      <%= image_tag "no_image", class: "card-img" %>
    <% end %>
  <% end %>
  <div class="card-text">
  <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
  </div>
  <div class="card-text">
    <p>エリア：<%= post.area %></p>
  </div>
  <div class="card-text">
    <p>ポイント名：<%= post.point %></p>
  </div>
  <div class="card-text">
    <p>波情報：<%= truncate(post.caption, length: 90) %></p>
  </div>
</div>
